pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/thebela/jenkins-docker-cicd-pipeline.git'
            }
        }

        stage('Build') {
            steps {
                sh 'bash scripts/build.sh'
            }
        }

        stage('Test') {
            steps {
                sh 'bash scripts/test.sh'
            }
        }

        stage('Deploy') {
            steps {
                sh 'bash scripts/deploy.sh'
            }
        }
    }

    post {
        always {
            echo 'Pipeline complete!'
        }
    }
}
